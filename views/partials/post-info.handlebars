<article class="post card">
    <div class="card">
        <div class="card-header">
            <h3><a class="text-white" href="/post/{{id}}">{{title}}</a> <span>Posted by {{user.username}} on {{format_date created_at}}</span></h3>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{post_content}}</p>
            </blockquote>
        </div>
    </div>
</article>