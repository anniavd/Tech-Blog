<article>
    <h2 class="heading">
        Edit Post
    </h2>
    <form class="edit-post-form otherForm">
        <div>
           <label for="post-title">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" />
            <label for="post-content">Content</label>
             <input  class="editCont" name="post-content" type="text" class="large-input" size="40" value="{{post.post_content}}" />
            
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}}
                {{format_plural "comment" post.comments.length}}</a>
        </div>

        <button type="submit" class="btn btn-secondary">Save Post</button>
        <button type="button" class="delete-post-btn btn btn-secondary">Delete post</button>
    </form>
    {{> comments post.comments }}
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>