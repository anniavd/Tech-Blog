<div class="flexbox">
    <section class="edit-new">
        <h2 class="heading">Create a new post</h2>
        <form class="new-post-form otherForm">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="post-title" placeholder="write a title" />
            </div>
            <div>
                <label for="post-content">Content</label>
                <textarea id="post-content" name="post-content" class="large-input" rows="4"
                    placeholder="write your text here" /></textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Create</button>
        </form>
    </section>

    {{#if posts.length}}
    <section class="yr-posts">
        <h2>Your Posts</h2>
        <ul>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
                <hr>
            </li>
            {{/each}}
        </ul>
    </section>
    {{/if}}
</div>

